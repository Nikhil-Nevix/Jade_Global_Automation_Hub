# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Secret Keys (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/infra_automation

# Redis/Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Storage (Linux paths)
UPLOAD_FOLDER=/var/lib/infra-automation/playbooks
ANSIBLE_RUNNER_DIR=/var/lib/infra-automation/ansible-runner
ANSIBLE_PRIVATE_KEY_DIR=/var/lib/infra-automation/keys

# Development overrides (use local paths)
# UPLOAD_FOLDER=./data/playbooks
# ANSIBLE_RUNNER_DIR=./data/ansible-runner
# ANSIBLE_PRIVATE_KEY_DIR=./data/keys

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/infra-automation/app.log
# Development: LOG_FILE=app.log

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
